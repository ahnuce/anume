<p id="notice"><%= notice %></p>

<a href="#" id="show"><h1>ANIMES</h1></a>

<table id='hidden'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Episodes</th>
      <th>Photo url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animes.each do |anime| %>
      <tr>
        <td><%= anime.title %></td>
        <td><%= anime.episodes %></td>
        <td><%= image_tag anime.photo_url %></td>
        <td><button><%= link_to 'Forum', anime %></button></td>
        <td><button><%= link_to 'Edit', edit_anime_path(anime) %></button></td>
        <td><button><%= link_to 'Delete', anime, method: :delete, data: { confirm: 'Delete it foreal?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

