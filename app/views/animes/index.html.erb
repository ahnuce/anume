<h2 id='talk' style="font-family:amarillo;text-shadow:1px 1px lightblue;">Lets Talk Anime</h2>
          <br>
          <% if @animes.present? || !user_signed_in? || @anime.present? %>

          <%= yield %>
          <% else %>
          <%= yield %>
            <p>There are no posts containing the term(s) <%= params[:search] %>.</p>

          <% end %>
<p id="notice"><%= notice %></p>

<div style="float:left; width:30%;">


<a href="#" id="show" data-transition="slide"><h1>Show Animes?</h1></a>

<table class='clearfix' id='hidden'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Episodes</th>
      <th></th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @animes.each do |anime| %>
      <tr>
        <td><%= anime.title %></td>
        <td><%= anime.episodes %></td>
        <td><%= image_tag anime.photo_url %></td>
        <td>
          <%= link_to 'Forum', anime %><br>
          <%= link_to 'Edit', edit_anime_path(anime) %><br>
    <%= link_to 'Delete', anime, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

